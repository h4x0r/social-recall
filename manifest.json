{
  "manifest_version": 3,
  "name": "Social Recall",
  "version": "0.0.0.2",
  "description": "Remind you of people you came across on social networks",
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": [
    "*://*.linkedin.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
